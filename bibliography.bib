	note = {Publisher: Taylor \& Francis
\_eprint: https://doi.org/10.1080/10962247.2020.1734113},
	keywords = {Air toxics, black carbon, Near-road, EJ},
	pages = {231--246},
	file = {Snapshot:C\:\\Users\\ubers\\Zotero\\storage\\JCRMK8DY\\10962247.2020.html:text/html},
}

