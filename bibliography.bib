Publisher: Multidisciplinary Digital Publishing Institute},
	keywords = {Air toxics, black carbon, EJ, community air monitoring, wood smoke},
	pages = {1080},
	file = {Full Text PDF:C\:\\Users\\ubers\\Zotero\\storage\\H6E5BRML\\Brown et al. - 2020 - Assessment of Ambient Air Toxics and Wood Smoke Po.pdf:application/pdf;Snapshot:C\:\\Users\\ubers\\Zotero\\storage\\TELKNMFS\\1080.html:text/html},
